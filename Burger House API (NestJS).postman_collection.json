						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user1@example.com\",\n  \"password\": \"StrongPassword#123\",\n  \"name\": \"John\",\n  \"lastname\": \"Doe\",\n  \"mobile\": \"+4915123456789\",\n  \"address\": \"Berlin, DE\"\n}",
